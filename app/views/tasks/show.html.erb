<h2>Task: <%= @task.title %></h2>
<p>Details: <%= @task.details %></p>
<p>Completed? <%= @task.completed.to_s.capitalize %></p>

<%= link_to "Edit", task_edit_path %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "Back to tasks", tasks_path %>
